extends ../../assets/templates/layout

block head
    - var pageDescription = 'Some description';
    - var pageKeywords = 'Some keywords';
    - var pageTitle = 'Some title';

block intro
    +intro({
        title: 'Insurance form',
        subtitle: 'Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.'
    })

block form
    +b('form').form
        div.row
            div.col-md-6.mb-3
                label(for="full-name")!= "Full Name"

                div.input-group
                    input(type="text" class="form-control" id="full-name")

        div.row
            div.col-md-6.mb-3
                label(for="email")!= "Email"

                div.input-group
                    div.input-group-prepend
                        span.input-group-text!= "@"

                    input(type="text" class="form-control" id="email")

        div.row
            div.col-md-6.mb-3
                div.input-group
                    label!= "Are you a Norwegian?"

                    div(style="width: 100%;")
                        div.form-check
                            input.form-check-input(type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked)

                            label.form-check-label(for="exampleRadios1")!= "Yes"

                        div.form-check
                            input.form-check-input(type="radio" name="exampleRadios" id="exampleRadios2" value="option2")

                            label.form-check-label(for="exampleRadios2")!= "No"

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="origin")!= "Country of origin"

                    div(style="width: 100%;")
                        select#origin.custom-select
                            option(selected='') Choose...
                            option(value='AF') Afghanistan
                            option(value='AL') Albania
                            option(value='DZ') Algeria
                            option(value='AD') Andorra
                            option(value='AO') Angola

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="years")!= "Number of years lived in Norway"

                    div(style="width: 100%;")
                        select#years.custom-select
                            option(selected='') Choose...
                            option(value='1') 1
                                option(value='2') 2
                                option(value='3') 3
                                option(value='4') 4
                                option(value='5') 5
                                option(value='6') 6
                                option(value='7') 7
                                option(value='8') 8
                                option(value='9') 9
                                option(value='10') 10
                                option(value='11') 11
                                option(value='12') 12
                                option(value='13') 13
                                option(value='14') 14
                                option(value='15') 15
                                option(value='16') 16
                                option(value='17') 17
                                option(value='18') 18
                                option(value='19') 19
                                option(value='20') 20

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="marital")!= "Your marital status"

                    div(style="width: 100%;")
                        select#marital.custom-select
                            option(selected='') Choose...
                            option(value='married') Married
                            option(value='widowed') Widowed
                            option(value='divorced') Divorced
                            option(value='single') Single

        div.row
            div.col-md-6.mb-3
                div.input-group
                    label!= "Education"

                    div(style="width: 100%;")
                        div.form-check
                            input.form-check-input(type="radio" name="education" id="education-1" value="option1" checked)

                            label.form-check-label(for="education-1")!= "Primary school"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="education-2" value="option2")

                            label.form-check-label(for="education-2")!= "High school"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="education-3" value="option3")

                            label.form-check-label(for="education-3")!= "University 1-3 years"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="education-4" value="option4")

                            label.form-check-label(for="education-4")!= "University 4+ years"

        div.row
            button.btn.btn-primary(type='button') Submit form
