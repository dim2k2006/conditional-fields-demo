extends ../../assets/templates/layout

block vars
    - var pageDescription = 'Insurance form';
    - var pageKeywords = 'Insurance form';
    - var pageTitle = 'Insurance form';
    - var activeLink = 'insurance.html';

block intro
    +intro({
        title: 'Insurance form',
        subtitle: `
            <p>Below is an example of an «insurance» form using conditional fields.</p>

            <p>Start filling the form and watch how new fields being appeared if you answer «no» on «Are you English?» question.</p>

            <p>Submit the form and check what kind of data is being sent to the server.</p>
        `
    })

block form
    +b('form').form
        div.row
            div.col-md-6.mb-3
                label(for="14x5e")!= "Full Name"

                div.input-group
                    input(type="text" name="name" class="form-control" id="14x5e")

        div.row
            div.col-md-6.mb-3
                label(for="wtf0p")!= "Email"

                div.input-group
                    div.input-group-prepend
                        span.input-group-text!= "@"

                    input(type="text" name="email" class="form-control" id="wtf0p")

        div.row
            div.col-md-6.mb-3
                div.input-group
                    label!= "Are you English?"

                    div(style="width: 100%;")
                        div.form-check
                            input.form-check-input(type="radio" name="english_citizenship" id="qfyjn" value="yes" checked)

                            label.form-check-label(for="qfyjn")!= "Yes"

                        div.form-check
                            input.form-check-input(type="radio" name="english_citizenship" id="buaci" value="no")

                            label.form-check-label(for="buaci")!= "No"

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="760xy")!= "Country of origin"

                    div(style="width: 100%;")
                        select.custom-select(id="760xy" name="origin_citizenship" data-rules='[{"name": "english_citizenship", "value": ["no"]}]')
                            option(selected='') Choose...
                            option(value='AF') Afghanistan
                            option(value='AL') Albania
                            option(value='DZ') Algeria
                            option(value='AD') Andorra
                            option(value='AO') Angola

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="t8bn1")!= "Number of years lived in England"

                    div(style="width: 100%;")
                        select.custom-select(id="t8bn1" name="years_in_england" data-rules='[{"name": "english_citizenship", "value": ["no"]}]')
                            option(selected='') Choose...
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                            option(value='6') 6
                            option(value='7') 7
                            option(value='8') 8
                            option(value='9') 9
                            option(value='10') 10
                            option(value='11') 11
                            option(value='12') 12
                            option(value='13') 13
                            option(value='14') 14
                            option(value='15') 15
                            option(value='16') 16
                            option(value='17') 17
                            option(value='18') 18
                            option(value='19') 19
                            option(value='20') 20
                            option(value='20+') 20+

        div.row
            div.col-md-6.mb-3
                .input-group
                    label(for="ho75d")!= "Your marital status"

                    div(style="width: 100%;")
                        select.custom-select(id="ho75d" name="marital_status")
                            option(selected='') Choose...
                            option(value='married') Married
                            option(value='widowed') Widowed
                            option(value='divorced') Divorced
                            option(value='single') Single

        div.row
            div.col-md-6.mb-3
                div.input-group
                    label!= "Education"

                    div(style="width: 100%;")
                        div.form-check
                            input.form-check-input(type="radio" name="education" id="ha9b4" value="primary_school" checked)

                            label.form-check-label(for="ha9b4")!= "Primary school"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="so2w2" value="high_school")

                            label.form-check-label(for="so2w2")!= "High school"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="jpar4" value="university_1-3_years")

                            label.form-check-label(for="jpar4")!= "University 1-3 years"

                        div.form-check
                            input.form-check-input(type="radio" name="education" id="iqyvs" value="university_4+_years")

                            label.form-check-label(for="iqyvs")!= "University 4+ years"

        div.row
            div.col-md-6.mb-3
                button.btn.btn-primary(type='submit') Submit form
